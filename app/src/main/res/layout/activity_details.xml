<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="produit"
            type="com.example.pfi.Produit"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:backgroundTint="#B1CAA7"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="286dp"
            app:srcCompat="@drawable/carrot_stew" />

        <TextView
            android:id="@+id/txtViewNom"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:fontFamily="@font/zelda_font"
            android:gravity="center"
            android:shadowColor="#254310"
            android:shadowRadius="2"
            android:text="@string/carrot_stew_name"
            android:textColor="#3E3E3E"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txtViewPrix"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="@font/zelda_font"
            android:gravity="center"
            android:shadowColor="#254310"
            android:shadowRadius="2"
            android:text="@string/carrot_stew_price"
            android:textColor="#3E3E3E"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txtViewCoeurs"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:fontFamily="@font/zelda_font"
            android:gravity="center"
            android:shadowColor="#264510"
            android:shadowRadius="2"
            android:text="@string/carrot_stew_hearts"
            android:textColor="#3E3E3E"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txtViewDescription"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:fontFamily="@font/zelda_font"
            android:gravity="center"
            android:shadowColor="#254310"
            android:shadowRadius="2"
            android:text="@string/carrot_stew_description"
            android:textColor="#3E3E3E"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnRetour"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:backgroundTint="#00D9E6D2"
                android:fontFamily="@font/zelda_font"
                android:text="@string/btnBack"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnAddCart"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:layout_weight="1"
                android:backgroundTint="#A96363"
                android:fontFamily="@font/zelda_font"
                android:text="@string/btnAddCart"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

</layout>